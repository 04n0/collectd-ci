{
  "variables": {
    "coverity_token": ""
  },
  "builders": [
    {
      "type": "digitalocean",
      "image": "freebsd-10-3-x64",
      "region": "fra1",
      "size": "512mb",
      "snapshot_name": "freebsd10-amd64",
      "ssh_username": "freebsd"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "/bin/sh -xe {{ .Path }}",
      "script": "scripts/freebsd10.sh"
    },
    {
      "type": "shell",
      "execute_command": "/bin/sh -xe {{ .Path }} \"{{user `coverity_token`}}\"",
      "script": "scripts/coverity.sh"
    }
  ]
}
