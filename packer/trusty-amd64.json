{
  "builders": [
    {
      "type": "digitalocean",
      "image": "ubuntu-14-04-x64",
      "region": "lon1",
      "size": "512mb",
      "snapshot_name": "buildenv-trusty-amd64"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "/bin/sh -xe {{ .Path }}",
      "script": "scripts/trusty.sh"
    }
  ]
}
