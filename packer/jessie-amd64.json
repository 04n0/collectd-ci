{
  "variables": {
    "coverity_token": ""
  },
  "builders": [
    {
      "type": "digitalocean",
      "image": "debian-8-x64",
      "region": "fra1",
      "size": "512mb",
      "snapshot_name": "jessie-amd64"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "/bin/sh -xe {{ .Path }}",
      "script": "scripts/jessie.sh"
    },
    {
      "type": "shell",
      "execute_command": "/bin/sh -xe {{ .Path }} \"{{user `coverity_token`}}\"",
      "script": "scripts/coverity.sh"
    }
  ]
}
