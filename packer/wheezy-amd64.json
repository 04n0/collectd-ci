{
  "variables": {
    "coverity_token": ""
  },
  "builders": [
    {
      "type": "digitalocean",
      "image": "debian-7-x64",
      "region": "fra1",
      "size": "512mb",
      "snapshot_name": "wheezy-amd64",
      "ssh_username": "root"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "/bin/sh -xe {{ .Path }}",
      "script": "scripts/wheezy.sh"
    }
  ]
}
