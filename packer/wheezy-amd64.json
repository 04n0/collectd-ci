{
  "builders": [
    {
      "type": "digitalocean",
      "image": "debian-7-0-x64",
      "region": "fra1",
      "size": "512mb",
      "snapshot_name": "buildenv-wheezy-amd64"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "/bin/sh -xe {{ .Path }}",
      "script": "scripts/wheezy.sh"
    }
  ]
}
